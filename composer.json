{
    "name": "flux-se/sylius-payum-stripe-plugin",
    "type": "sylius-plugin",
    "keywords": ["sylius", "sylius-plugin", "stripe", "payum", "gateway", "sca", "checkout", "session"],
    "description": "Payum Stripe gateways plugin for Sylius.",
    "license": "MIT",
    "authors": [
        {
            "name": "Francis HILAIRE",
            "email": "Prometee@users.noreply.github.com"
        }
    ],
    "require": {
        "flux-se/payum-stripe-bundle": "^1.2",
        "sylius/sylius": "^1.5"
    },
    "require-dev": {
        "ext-json": "*",
        "behat/behat": "^3.7",
        "behat/mink-selenium2-driver": "^1.4",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.1",
        "friends-of-behat/variadic-extension": "^1.3",
        "friendsofsymfony/oauth-server-bundle": "^1.6 || >2.0.0-alpha.0 ^2.0@dev",
        "lakion/mink-debug-extension": "^2.0.0",
        "phpspec/phpspec": "^7.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-doctrine": "^0.12.26",
        "phpstan/phpstan-strict-rules": "^0.12.0",
        "phpstan/phpstan-webmozart-assert": "^0.12.7",
        "phpunit/phpunit": "^9.5",
        "sensiolabs/security-checker": "^6.0",
        "sylius-labs/coding-standard": "^3.2",
        "symfony/browser-kit": "^4.4 || ^5.2",
        "symfony/debug-bundle": "^4.4 || ^5.2",
        "symfony/dotenv": "^4.4 || ^5.2",
        "symfony/intl": "^4.4 || ^5.2",
        "symfony/web-profiler-bundle": "^4.4 || ^5.2",
        "vimeo/psalm": "^4.3"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": { "FluxSE\\SyliusPayumStripePlugin\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\FluxSE\\SyliusPayumStripePlugin\\": "tests/",
            "Tests\\FluxSE\\SyliusPayumStripePlugin\\App\\": "tests/Application/src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyse": [
            "@composer validate --strict",
            "vendor/bin/phpstan.phar analyse -c phpstan.neon -l max src/",
            "vendor/bin/psalm"
        ],
        "fix": [
            "vendor/bin/ecs check . --fix"
        ],
        "post-install-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-update-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-create-project-cmd": [
            "php bin/create_node_symlink.php"
        ]
    }
}
